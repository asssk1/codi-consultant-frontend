<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AI 코디 컨설턴트 - 메인</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background-color: #0D1320;
      font-family: 'Inter', sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      padding: 0;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in {
      animation: fadeIn 1s ease-out forwards;
    }
  </style>
</head>
<body>
  <div id="auth-container" class="p-8 md:p-12 bg-transparent text-white w-full h-full mx-auto">
    <!-- JS에서 화면이 렌더링됩니다 -->
  </div>

  <script>
    const authContainer = document.getElementById('auth-container');
    let currentView = 'main'; // main, login, signup, service

    // -------------------------------
    // 메인 화면
    // -------------------------------
    const getMainView = () => `
      <div class="flex flex-col items-center justify-center text-center px-6 py-12 animate-fade-in">
        <h1 class="text-5xl md:text-7xl font-extrabold mb-4">
          <span class="text-gray-400">AI</span> <span class="text-white">코디 컨설턴트</span>
        </h1>
        <p class="text-gray-400 text-lg md:text-xl mb-14">
          당신의 옷장, 새로운 시작
        </p>
        <div class="flex space-x-6 w-full max-w-md">
          <button id="main-login-btn"
            class="flex-1 px-6 py-4 text-lg font-semibold rounded-lg bg-white text-gray-900 shadow-lg hover:bg-gray-200 transition">
            로그인
          </button>
          <button id="main-signup-btn"
            class="flex-1 px-6 py-4 text-lg font-semibold rounded-lg border-2 border-white text-white hover:bg-white hover:text-gray-900 shadow-lg transition">
            회원가입
          </button>
        </div>
      </div>
    `;

    // -------------------------------
    // 서비스 선택 화면
    // -------------------------------
    const getServiceSelectionView = () => `
      <div class="flex flex-col items-center w-full max-w-6xl mx-auto p-8 md:p-16 bg-transparent text-white animate-fade-in">
        <div class="flex justify-between items-center w-full mb-10">
          <h2 class="text-3xl font-extrabold">AI 코디 컨설턴트</h2>
          <button onclick="window.location.reload()"
            class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 transition">
            로그아웃 (테스트)
          </button>
        </div>
        <div class="text-center mb-12">
          <h3 class="text-4xl font-bold mb-2">어떤 서비스를 이용하시겠어요?</h3>
          <p class="text-gray-400 text-lg">원하는 메뉴를 선택해주세요.</p>
        </div>
        <div class="flex flex-col md:flex-row justify-center space-y-6 md:space-y-0 md:space-x-8 w-full max-w-2xl">
          <!-- AI 코디 평가 -->
          <div onclick="alert('코디 평가 화면 (미구현)');"
            class="w-full md:w-1/2 p-8 bg-gray-900 text-white rounded-2xl shadow-xl cursor-pointer hover:shadow-2xl hover:scale-[1.02] transition border border-gray-700">
            <h4 class="text-2xl font-bold mb-3">AI 코디 평가</h4>
            <p class="text-gray-300">내 코디를 업로드하고<br>AI 피드백을 받아보세요.</p>
          </div>
          <!-- AI 코디 컨설턴트 -->
          <div onclick="alert('코디 컨설턴트 화면 (미구현)');"
            class="w-full md:w-1/2 p-8 bg-blue-700 text-white rounded-2xl shadow-xl cursor-pointer hover:shadow-2xl hover:scale-[1.02] transition border border-blue-600">
            <h4 class="text-2xl font-bold mb-3">AI 코디 컨설턴트</h4>
            <p class="text-gray-100">옷 사진을 업로드하고<br>새로운 코디를 추천받아 보세요.</p>
          </div>
        </div>
      </div>
    `;

    // -------------------------------
    // 로그인 화면
    // -------------------------------
    const getLoginForm = () => `
      <div class="flex flex-col items-center justify-center px-6 py-12 animate-fade-in">
        <h1 class="text-4xl md:text-5xl font-extrabold mb-2">
          <span class="text-gray-400">AI</span> <span class="text-white">코디 컨설턴트</span>
        </h1>
        <p class="text-gray-400 text-base md:text-lg mb-10">
          나만의 스타일을 찾아보세요
        </p>
        <form id="login-form" class="space-y-4 w-full max-w-sm">
          <input type="email" name="email" placeholder="이메일"
            class="bg-gray-900 text-white border border-gray-700 w-full px-4 py-3 rounded-lg focus:border-white focus:ring-0 transition" required />
          <input type="password" name="password" placeholder="비밀번호"
            class="bg-gray-900 text-white border border-gray-700 w-full px-4 py-3 rounded-lg focus:border-white focus:ring-0 transition" required />
          <button type="submit"
            class="w-full px-6 py-3 text-lg font-semibold rounded-lg bg-white text-gray-900 hover:bg-gray-200 shadow-md transition">
            로그인
          </button>
        </form>
        <div class="mt-6 text-sm text-center">
          <a href="#" id="signup-link" class="text-gray-400 hover:text-white transition font-medium">
            계정이 없으신가요? <span class="underline">회원가입</span>
          </a>
        </div>
      </div>
    `;

    // -------------------------------
    // 회원가입 화면
    // -------------------------------
    const getSignupForm = () => `
      <div class="flex flex-col items-center justify-center px-6 py-12 animate-fade-in">
        <h1 class="text-4xl md:text-5xl font-extrabold mb-2">
          <span class="text-gray-400">AI</span> <span class="text-white">코디 컨설턴트</span>
        </h1>
        <p class="text-gray-400 text-base md:text-lg mb-10">
          회원가입하고 새로운 스타일을 만나보세요
        </p>
        <form id="signup-form" class="space-y-4 w-full max-w-sm">
          <input type="text" name="name" placeholder="이름"
            class="bg-gray-900 text-white border border-gray-700 w-full px-4 py-3 rounded-lg focus:border-white focus:ring-0 transition" required />
          <input type="date" name="dob"
            class="bg-gray-900 text-white border border-gray-700 w-full px-4 py-3 rounded-lg focus:border-white focus:ring-0 transition" required />
          <input type="email" name="email" placeholder="이메일"
            class="bg-gray-900 text-white border border-gray-700 w-full px-4 py-3 rounded-lg focus:border-white focus:ring-0 transition" required />
          <input type="password" name="password" placeholder="비밀번호 (6자 이상)"
            class="bg-gray-900 text-white border border-gray-700 w-full px-4 py-3 rounded-lg focus:border-white focus:ring-0 transition" required />
          <button type="submit"
            class="w-full px-6 py-3 text-lg font-semibold rounded-lg bg-white text-gray-900 hover:bg-gray-200 shadow-md transition">
            회원가입
          </button>
        </form>
        <div class="mt-6 text-sm text-center">
          <a href="#" id="login-link" class="text-gray-400 hover:text-white transition font-medium">
            이미 계정이 있으신가요? <span class="underline">로그인</span>
          </a>
        </div>
      </div>
    `;

    // -------------------------------
    // 상태 변경 & 렌더링
    // -------------------------------
    const simulateLoginSuccess = () => {
      authContainer.classList.add('transition', 'duration-500', 'opacity-0');
      setTimeout(() => {
        currentView = 'service';
        authContainer.innerHTML = getServiceSelectionView();
        authContainer.classList.remove('opacity-0');
        window.scrollTo(0, 0);
      }, 500);
    };

    const renderForm = () => {
      let content = '';
      let linksToSetup = [];

      if (currentView === 'main') {
        content = getMainView();
        linksToSetup = [
          { id: 'main-login-btn', view: 'login' },
          { id: 'main-signup-btn', view: 'signup' }
        ];
      } else if (currentView === 'login') {
        content = getLoginForm();
        linksToSetup = [{ id: 'signup-link', view: 'signup' }];
      } else if (currentView === 'signup') {
        content = getSignupForm();
        linksToSetup = [{ id: 'login-link', view: 'login' }];
      } else if (currentView === 'service') {
        content = getServiceSelectionView();
      }

      authContainer.innerHTML = content;

      // 화면 전환 링크
      linksToSetup.forEach(({ id, view }) => {
        const element = document.getElementById(id);
        if (element) {
          element.addEventListener('click', (e) => {
            e.preventDefault();
            currentView = view;
            authContainer.classList.add('transition', 'duration-300', 'opacity-0');
            setTimeout(() => {
              renderForm();
              authContainer.classList.remove('opacity-0');
            }, 300);
          });
        }
      });

      // 로그인/회원가입 폼 제출 이벤트
      const formId = currentView === 'login' ? 'login-form' : currentView === 'signup' ? 'signup-form' : null;
      const form = formId ? document.getElementById(formId) : null;
      if (form) {
        form.addEventListener('submit', (e) => {
          e.preventDefault();
          simulateLoginSuccess();
        });
      }
    };

    // 초기 로드
    document.addEventListener('DOMContentLoaded', () => {
      renderForm();
    });
  </script>
</body>
</html>
