<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI 코디 컨설턴트 - 로그인/회원가입</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* 배경 색상 코드: #0D1320 적용 */
        body {
            background-color: #0D1320; /* 요청하신 짙은 다크 색상 */
            font-family: 'Inter', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }
        /* 입력 필드 기본 스타일 */
        .input-field {
            background-color: #171c2a; /* 배경색보다 약간 밝게 */
            color: #f0f0f0;
            border: 1px solid #3d3e52; 
            transition: border-color 0.2s;
            filter: invert(1);
        }
        .input-field:focus {
            border-color: #ffffff;
            outline: none;
        }
    </style>
</head>
<body>

<div id="auth-container" class="p-8 md:p-12 bg-transparent text-white w-full max-w-sm mx-auto">
    <!-- 폼은 JavaScript를 통해 렌더링됩니다. -->
</div>

<script>
    const authContainer = document.getElementById('auth-container');
    let isLoginView = true;
    
    // ====================================================================
    // 1. 서비스 선택 화면 템플릿
    // ====================================================================

    const getServiceSelectionView = () => `
        <div class="flex flex-col items-center w-full max-w-4xl mx-auto p-8 md:p-16 bg-transparent text-white">
            <div class="flex justify-between items-center w-full mb-10">
                <h2 class="text-3xl font-extrabold text-white">AI 코디 컨설턴트</h2>
                <button
                    onclick="window.location.reload()"
                    class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 transition duration-150"
                >
                    로그아웃 (테스트)
                </button>
            </div>

            <div class="text-center mb-12">
                <h3 class="text-4xl font-bold text-white mb-2">어떤 서비스를 이용하시겠어요?</h3>
                <p class="text-gray-400 text-lg">원하는 메뉴를 선택해주세요.</p>
            </div>

            <div class="flex flex-col md:flex-row justify-center space-y-6 md:space-y-0 md:space-x-8 w-full max-w-2xl">
                <!-- AI 코디 평가 카드 -->
                <div
                    onclick="alert('코디 평가 화면으로 이동 (미구현)');"
                    class="w-full md:w-1/2 p-8 bg-gray-800 text-white rounded-2xl shadow-xl cursor-pointer hover:shadow-2xl hover:scale-[1.02] transition duration-300 transform flex flex-col items-center justify-center border border-gray-700"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" class="text-yellow-400 mb-4"><path d="M11 2a2 2 0 0 0-2 2v5a2 2 0 0 0 4 0V4a2 2 0 0 0-2-2z"/><path d="M14 11V4"/><path d="M11 19c-3.31 0-6-2.69-6-6h2c0 2.21 1.79 4 4 4s4-1.79 4-4h2c0 3.31-2.69 6-6 6z"/></svg>
                    <h4 class="text-2xl font-bold mb-3">AI 코디 평가</h4>
                    <p class="text-center text-gray-300">
                        내가 입은 코디를 업로드하고<br />
                        AI에게 피드백을 받아보세요.
                    </p>
                </div>

                <!-- AI 코디 컨설턴트 카드 -->
                <div
                    onclick="alert('코디 컨설턴트 화면으로 이동 (미구현)');"
                    class="w-full md:w-1/2 p-8 bg-blue-700 text-white rounded-2xl shadow-xl cursor-pointer hover:shadow-2xl hover:scale-[1.02] transition duration-300 transform flex flex-col items-center justify-center border border-blue-600"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" class="text-white mb-4"><path d="M10 20l2-2 2 2"/><path d="M22 10a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h2v-4a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v4h2a2 2 0 0 0 2-2v-6z"/></svg>
                    <h4 class="text-2xl font-bold mb-3">AI 코디 컨설턴트</h4>
                    <p class="text-center text-gray-100">
                        가지고 있는 옷 사진을 올리고<br />
                        새로운 코디를 추천 받아 보세요.
                    </p>
                </div>
            </div>
        </div>
    `;

    // ====================================================================
    // 2. 로그인/회원가입 템플릿 및 로직
    // ====================================================================

    // 로그인 성공 시뮬레이션 및 서비스 선택 화면 렌더링
    const simulateLoginSuccess = () => {
        authContainer.innerHTML = getServiceSelectionView();
        authContainer.classList.remove('max-w-sm'); // 컨테이너 너비 확장
    };

    // 로그인 폼 HTML 템플릿
    const getLoginForm = () => `
        <div class="text-center mb-10">
            <h1 class="text-4xl font-black text-white mb-1">AI 코디 컨설턴트</h1>
            <p class="text-gray-400 text-base">나만의 스타일을 찾아보세요</p>
        </div>
        
        <form id="login-form" class="space-y-4">
            <input type="email" name="email" placeholder="이메일" class="input-field w-full px-4 py-3 rounded-none" required/>
            <input type="password" name="password" placeholder="비밀번호" class="input-field w-full px-4 py-3 rounded-none" required/>
            
            <button type="submit" class="w-full flex items-center justify-center px-6 py-3 border-none text-base font-bold rounded-lg shadow-md transition duration-300 bg-white text-gray-900 hover:bg-gray-200">
                로그인
            </button>
        </form>

        <div class="mt-6 text-center text-sm">
            <a href="#" id="signup-link" class="text-gray-400 hover:text-white transition duration-150 p-2 rounded-lg font-semibold">
                계정이 없으신가요? 회원가입
            </a>
        </div>
    `;

    // 회원가입 폼 HTML 템플릿 (이름, 생년월일 추가)
    const getSignupForm = () => `
        <div class="text-center mb-10">
            <h1 class="text-4xl font-black text-white mb-1">AI 코디 컨설턴트</h1>
            <p class="text-gray-400 text-base">회원가입하고 서비스를 이용하세요</p>
        </div>
        
        <form id="signup-form" class="space-y-4">
            <input type="text" name="name" placeholder="이름" class="input-field w-full px-4 py-3 rounded-none" required/>
            <input type="date" name="dob" class="input-field w-full px-4 py-3 rounded-none" required/>
            <input type="email" name="email" placeholder="이메일" class="input-field w-full px-4 py-3 rounded-none" required/>
            <input type="password" name="password" placeholder="비밀번호 (6자 이상)" class="input-field w-full px-4 py-3 rounded-none" required/>
            
            <button type="submit" class="w-full flex items-center justify-center px-6 py-3 border-none text-base font-bold rounded-lg shadow-md transition duration-300 bg-white text-gray-900 hover:bg-gray-200">
                회원가입
            </button>
        </form>

        <div class="mt-6 text-center text-sm">
            <a href="#" id="login-link" class="text-gray-400 hover:text-white transition duration-150 p-2 rounded-lg font-semibold">
                이미 계정이 있으신가요? 로그인
            </a>
        </div>
    `;

    // 폼 렌더링 및 이벤트 리스너 설정 함수
    const renderForm = () => {
        authContainer.innerHTML = isLoginView ? getLoginForm() : getSignupForm();

        // 폼 전환 링크 이벤트 설정
        const link = document.getElementById(isLoginView ? 'signup-link' : 'login-link');
        if (link) {
            link.addEventListener('click', (e) => {
                e.preventDefault(); 
                isLoginView = !isLoginView;
                authContainer.classList.add('transition', 'duration-300', 'opacity-0'); // 페이드 아웃
                setTimeout(() => {
                    renderForm(); // 폼 전환
                    authContainer.classList.remove('opacity-0'); // 페이드 인
                }, 300);
            });
        }
        
        // 폼 제출 시 이벤트 설정
        const formId = isLoginView ? 'login-form' : 'signup-form';
        const form = document.getElementById(formId);
        if(form) {
             form.addEventListener('submit', (e) => {
                e.preventDefault(); 
                simulateLoginSuccess(); 
            });
        }
    };

    // 페이지 로드 시 초기 폼 렌더링
    document.addEventListener('DOMContentLoaded', renderForm);

</script>

</body>
</html>
